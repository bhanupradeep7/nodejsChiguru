.home-page-wrapper
    .page-bg-img-wrap
        .page-title 
            | Let's not make 
            b.page-title-hght EDUCATION 
            | a dream for children
            .underline
            
    .grid.clearfix
        .home-description.marginal-gap-top
            p #{dummy}
        .projects-carousal-template.marginal-gap-top
            .proj-temp-wrapper.clearfix
                .proj-images
                    .img-wrapper(ng-class="animateProj")
                        img(ng-src="{{selectedProject.images[selectedProject.showImage]}}", alt="Project Image")
                    
                .proj-description
                    .proj-des-wrapper(ng-class="animateProj")
                        h2.proj-des-title {{selectedProject.header}}
                            .underline
                        p.proj-des-cont {{selectedProject.description}}
                    .proj-btn-wrapper
                        button.btn.btn-cust(ng-click="buttonActive && projectsNavigation('next')")
                            i.glyphicon.glyphicon-chevron-left
                        button.btn.btn-cust(ng-click="buttonActive && projectsNavigation('previous')")
                            i.glyphicon.glyphicon-chevron-right
                            
        .content-hdr
            h2 Upcoming Events
                .underline            
        .upcoming-events-wrapper.marginal-gap-top.clearfix
            .card-img-wrapper(ng-repeat="upcoming in upcomingEvents")
                .card-wrap
                    .card-img
                        img(ng-src="{{upcoming.image}}", alt="Source Image")
                    .card-content
                        p.card-description {{upcoming.content}}
                        div.card-eventdate Date : 
                            span.italic {{upcoming.date}}
                            
        .content-hdr
            h2 Helping Hands
                .underline  
        
        .infinite-scroll-names-wrapper.marginal-gap-top.clearfix
            .inf-scroll-wrap
                .inf-scroll-container
                    .inf-scroll-elem(ng-repeat="details in helpingHands")
                        span.glyphicon.glyphicon-grain.inf-scroll-name-icon
                        span.inf-scroll-display-name {{details.displayName}}
                        span.inf-scroll-degree {{details.degree}}
                        span.inf-scroll-city ({{details.currentCity}})

 
                            
                            
                        
        
    
